<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputPin">

    <com.andrognito.pinlockview.IndicatorDots
        android:id="@+id/ind_dots_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="57dp"
        app:dotDiameter="12dp"
        app:dotSpacing="14dp"
        app:layout_constraintBottom_toTopOf="@+id/pin_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.andrognito.pinlockview.PinLockView
        android:id="@+id/pin_input"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="50dp"
        app:keypadButtonSize="72dp"
        app:keypadDeleteButtonPressedColor="#C8C8C8"
        app:keypadTextColor="#E6E6E6"
        app:keypadTextSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:pinLength="4" />

</androidx.constraintlayout.widget.ConstraintLayout>