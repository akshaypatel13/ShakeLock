<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bgd"
    tools:context=".Home">

    <Button
        android:id="@+id/btn_filePicker"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/file"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.139" />

    <TextView
        android:id="@+id/txt_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_filePicker"
        app:layout_constraintVertical_bias="0.324" />

    <Button
        android:id="@+id/btn_dec"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/unloc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_path"
        app:layout_constraintVertical_bias="0.744"
        android:layout_marginRight="44dp" />

    <Button
        android:id="@+id/btn_enc"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/lock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_path"
        app:layout_constraintVertical_bias="0.744" />

    <TextView
        android:id="@+id/tvenc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="22dp"
        android:text="Encrypt"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_enc"
        app:layout_constraintVertical_bias="0.538"
        android:layout_marginLeft="68dp" />

    <TextView
        android:id="@+id/tvdec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="114dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="16dp"
        android:text="Decrypt"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvenc"
        app:layout_constraintTop_toBottomOf="@+id/btn_dec"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="68dp"
        android:layout_marginLeft="114dp" />

    <TextView
        android:id="@+id/fileupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="178dp"
        android:text="Upload"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_filePicker"
        android:layout_marginLeft="174dp"
        android:layout_marginRight="178dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="333dp"
        android:layout_marginBottom="16dp"
        android:text="Files:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_path"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="333dp" />
</androidx.constraintlayout.widget.ConstraintLayout>